{
  "name": "lonecat/orm",
  "description": "Simple ORM implementation",
  "minimum-stability": "stable",
  "license": "AGPL-3.0-only",
  "authors": [
    {
      "name": "Lone Cat",
      "email": "mail@lone-cat.dev"
    }
  ],
  "autoload": {
    "psr-4": {
      "LoneCat\\ORM\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "": ""
    }
